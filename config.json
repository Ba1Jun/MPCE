{
  "data_dir": "squad",
  "save_dir": "squad_out",
  "vocab_size": 20000,
  "batch_size": 48,
  "model_save_path": "ckpt/model.bin",
  "predict_save_path": "predict.json",
  "max_seq_len": 300,
  "albert_model_name": "albert-base-v2",
  "albert_cache_dir": "~/nlp_data/albert-base-v2",

  "albert": true,
  "albert_word_embed_size": 128,
  "word_embed_size": 768,
  "bio_embed_size": 16,
  "feat_embed_size": 16,
  "hidden_size": 512,
  "attn_size": 512,
  "enc_bidir": true,
  "n_head": 4,
  "max_out_cpy": true,
  "dropout": 0.5,

  "optim": "adam",
  "ulloss": true,
  "ulloss_weight": 0.5,
  "seq_ulloss": true,
  "seq_ulloss_rate": 0.5,
  "seq_ulloss_seq_type": "repeat",
  "seq_ulloss_ngram": 4,
  "seq_ulloss_mask_p": 0.1,
  "lr": 0.001,
  "lr_decay": 0.5,
  "lr_decay_patience": 5,
  "max_num_trial": 5,
  "max_grad_norm": 5.0,
  "max_weight_value": 15,
  "max_decode_step": 20,
  "dec_method": "beam_search",
  "beam_size": 5,
  "nucleus_p": 0.9,

  "epoch": 20,
  "log_per_batches": 100,
  "validate_per_batches": 500,
  "start_validate_after_batches": 1000,
  "gpu": -1,
  "model": "qg"
}
